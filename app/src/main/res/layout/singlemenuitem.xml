<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"

            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/foodImage"
                android:background="@drawable/pizzaone"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/foodImage"
                android:layout_toRightOf="@+id/foodImage"
                android:text="Pizza"
                android:textSize="30dp"
                android:textColor="#000000"
                android:layout_marginTop="12dp"
                android:id="@+id/foodName"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/foodImage"
                android:layout_below="@+id/foodName"
                android:text="Italian pizza with extra cheese"
                android:layout_marginLeft="5dp"
                android:id="@+id/foodDesc"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$12"
                android:layout_toRightOf="@+id/foodDesc"
                android:layout_below="@+id/foodDesc"
                android:layout_marginLeft="50dp"
                android:id="@+id/foodPrize"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>